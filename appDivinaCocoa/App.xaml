                               FontWeight="Light" Text="{Binding title}"></TextBlock>
                    <TextBlock Margin="5,25,5,0" VerticalAlignment="Top" FontSize="20" FontFamily="Segoe UI" 
                               FontWeight="Light" Foreground="#FF533A2A" Text="{Binding description}"></TextBlock>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="paradesayunar">
                <Grid Width="400" Height="50">
                    <TextBlock Margin="5,5,5,0" VerticalAlignment="Top" FontSize="20" FontFamily="Segoe UI" 
                               FontWeight="Light" Text="{Binding title}"></TextBlock>
                    <TextBlock Margin="5,25,5,0" VerticalAlignment="Top" FontSize="20" FontFamily="Segoe UI" 
